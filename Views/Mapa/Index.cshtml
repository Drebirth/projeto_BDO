@* @model IEnumerable<Mapa> *@
@model PaginatedList<Mapa>
<h2>Lista de Mapas</h2>

@{
	ViewData["Title"] = "Lista de Mapas";
}

<br />
<table class="table table-striped">
	<thead>
		<tr>
			<th>Nome</th>
			<th>Nível Recomendado</th>
			<th>Ataque Recomendado</th>
			<th>Defesa recomendada</th>
			<th>Adicionar Grind</th>
			<th>Detalhes sobre o mapa</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var mapas in Model)
		{			
		<tr>
			<td>@mapas.Nome</td>
			<td>@mapas.NivelRecomendado</td>
			<td>@mapas.AtaqueRecomendado</td>
			<td>@mapas.DefesaRecomendada</td>			
			@* <td><a asp-action="Create" asp-route-id="@mapas.Id" asp-controller="Item" >Itens</a></td> *@
				<td><a asp-action="Create" asp-route-id="@mapas.Id" asp-controller="Grind" class="btn btn-primary">Grind</a></td>
				<td><a asp-action="Details" asp-route-id="@mapas.Id" class="btn btn-primary">Detalhes</a></td>
			@* 	<td><a asp-action="Edit" asp-route-id="@mapas.Id" class="btn btn-primary">Editar</a></td> *@
		@* 		<td><a asp-action="Delete" asp-route-id="@mapas.Id" class="btn btn-primary">Excluir</a></td> *@
		</tr>
		}
	</tbody>
</table>

<div class="fixed-bottom bg-dark text-white text-center p-3" style="margin-bottom: 75px">

	Página @Model.PageIndex de @Model.TotalPages
	@if (Model.HasPreviousPage)
	{
		<a asp-action="Index" asp-route-page="@(Model.PageIndex - 1)">Anterior</a>
	}
	@if (Model.HasNextPage)
	{
		<a asp-action="Index" asp-route-page="@(Model.PageIndex + 1)">Próxima</a>
	}
</div>