
@model PaginatedList<Grind>
<h2>Lista de grind</h2>

<table class="table table-striped">
	<thead>	
		<tr>
			<th>Mapa</th>
			<th>Personagem</th>
			<th>Classe</th>
			<th>Valor do grind</th>
			<th>Excluir</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var grind in Model)
		{
			<tr>
				<td>@grind.Mapa</td>
				<td>@grind.NomePersonagem</td>
				<td>@grind.Classe</td>
				<td>
					 @Html.DisplayFor(m => grind.ValorTotal) 
					

				</td>
				<td><a asp-action="Delete" asp-route-id="@grind.Id" class="btn btn-danger">Delete</a></td>
				
			</tr>
		}
	</tbody>
</table>

<div class="fixed-bottom bg-dark text-white text-center p-3" style="margin-bottom: 75px">
	Página @Model.PageIndex de @Model.TotalPages
	@if (Model.HasPreviousPage)
	{
		<a asp-action="Index" asp-route-page="@(Model.PageIndex - 1)">Anterior</a>
	}
	@if (Model.HasNextPage)
	{
		<a asp-action="Index" asp-route-page="@(Model.PageIndex + 1)">Próxima</a>
	}
</div>


