@model projetoBDO.Entities.Spot

@{
    ViewData["Title"] = "Adicionando Spots";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NivelRecomendado" class="control-label"></label>
        <input asp-for="NivelRecomendado" class="form-control" type="number" />
        <span asp-validation-for="NivelRecomendado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AtaqueRecomendado" class="control-label"></label>
        <input asp-for="AtaqueRecomendado" class="form-control" type="number" />
        <span asp-validation-for="AtaqueRecomendado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DefesaRecomendada" class="control-label"></label>
        <input asp-for="DefesaRecomendada" class="form-control" type="number" />
        <span asp-validation-for="DefesaRecomendada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ImagemUrl" class="control-label"></label>
        <input asp-for="ImagemUrl" class="form-control" />
        <span asp-validation-for="ImagemUrl" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

    
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
