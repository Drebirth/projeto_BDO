@model Item

@{
    ViewData["Title"] = "Adicionar Item";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">        
        <input asp-for="IdItem" class="form-control" hidden/>        
    </div>
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome do Item</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Preco" class="form-label">Preço</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <input asp-for="SpotId" class="form-control" type="number" hidden />        
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}